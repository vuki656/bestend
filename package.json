{
    "name": "bestend",
    "author": "domagoj.vukovic <off.vukovic@gmail.com>",
    "scripts": {
        "dev": "nodemon",
        "lint": "yarn lint:cspell && yarn lint:prettier && yarn lint:eslint",
        "lint:cspell": "cspell --no-progress --no-summary '**'",
        "lint:eslint": "eslint './**/*.{js,ts,tsx}' --quiet --cache",
        "lint:prettier": "prettier --loglevel warn --check \"./**/*{yaml,yml,json,md,gql,graphql,css}\"",
        "types:generate": "graphql-codegen"
    },
    "dependencies": {
        "@apollo/server": "^4.4.0",
        "graphql": "^16.6.0"
    },
    "devDependencies": {
        "@graphql-codegen/cli": "^3.0.0",
        "@graphql-codegen/graphql-modules-preset": "^3.0.0",
        "@graphql-codegen/typescript-resolvers": "^3.0.0",
        "@graphql-tools/load-files": "^6.6.1",
        "@graphql-tools/merge": "^8.3.18",
        "@rimac-technology/style-guide": "^3.0.0",
        "@types/eslint": "^8.21.1",
        "@types/node": "^18.14.0",
        "@types/prettier": "^2.7.2",
        "cspell": "^6.26.3",
        "eslint": "^8.34.0",
        "nodemon": "^2.0.20",
        "prettier": "^2.8.4",
        "ts-node": "^10.9.1",
        "typescript": "^4.9.5"
    },
    "packageManager": "yarn@3.4.1"
}
