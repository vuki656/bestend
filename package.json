{
    "name": "bestend",
    "author": "domagoj.vukovic <off.vukovic@gmail.com>",
    "scripts": {
        "build:project": "yarn build:schema && webpack",
        "build:schema": "ts-node ./src/server/build-schema.ts",
        "database:migrate": "docker compose run --no-deps --rm migration",
        "database:setup": "docker compose run --rm migration",
        "database:sync": "prisma db pull && prettier --write './src/database/schema.prisma'",
        "dev": "nodemon",
        "generate:orm": "prisma generate",
        "generate:template": "plop",
        "generate:test-types": "graphql-codegen",
        "generate:types": "graphql-codegen",
        "lint": "yarn lint:cspell && yarn lint:prettier && yarn lint:eslint",
        "lint:cspell": "cspell --no-progress --no-summary '**'",
        "lint:eslint": "eslint './**/*.{js,ts,tsx}' --quiet --cache",
        "lint:prettier": "prettier --loglevel warn --write './**/*{yaml,yml,json,md,gql,graphql}'",
        "start": "node 'dist/main.js'",
        "test": "jest"
    },
    "dependencies": {
        "@apollo/server": "^4.4.0",
        "@paralleldrive/cuid2": "^2.2.0",
        "@prisma/client": "^4.10.1",
        "bcrypt": "^5.1.0",
        "dayjs": "^1.11.7",
        "dotenv": "^16.0.3",
        "envalid": "^7.3.1",
        "graphql": "^16.6.0",
        "pino": "^8.10.0",
        "zod": "^3.20.6"
    },
    "devDependencies": {
        "@graphql-codegen/cli": "^3.1.0",
        "@graphql-codegen/graphql-modules-preset": "^3.1.0",
        "@graphql-codegen/typescript-resolvers": "^3.1.0",
        "@graphql-tools/load-files": "^6.6.1",
        "@graphql-tools/merge": "^8.3.18",
        "@rimac-technology/style-guide": "^4.0.1",
        "@types/bcrypt": "^5.0.0",
        "@types/eslint": "^8.21.1",
        "@types/jest": "^29.4.0",
        "@types/node": "^18.14.0",
        "@types/prettier": "^2.7.2",
        "@types/string-replace-loader": "^2.3.2",
        "@types/webpack-node-externals": "^2.5.3",
        "copy-webpack-plugin": "^11.0.0",
        "cspell": "^6.26.3",
        "eslint": "^8.34.0",
        "graphql-tag": "^2.12.6",
        "jest": "^29.4.3",
        "nodemon": "^2.0.20",
        "pino-pretty": "^9.3.0",
        "plop": "^3.1.2",
        "prettier": "^2.8.4",
        "prisma": "^4.10.1",
        "string-replace-loader": "^3.1.0",
        "ts-jest": "^29.0.5",
        "ts-loader": "^9.4.2",
        "ts-node": "^10.9.1",
        "typescript": "^4.9.5",
        "webpack": "^5.75.0",
        "webpack-cli": "^5.0.1",
        "webpack-node-externals": "^3.0.0"
    },
    "packageManager": "yarn@3.4.1",
    "prisma": {
        "schema": "./src/database/schema.prisma",
        "seed": "ts-node ./src/database/seed/index.ts"
    }
}
