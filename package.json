{
    "name": "bestend",
    "author": "domagoj.vukovic <off.vukovic@gmail.com>",
    "scripts": {
        "database:migrate": "docker compose run --no-deps --rm migration",
        "database:setup": "docker compose run --rm migration",
        "database:sync": "prisma db pull && prettier --write './src/database/schema.prisma'",
        "dev": "nodemon",
        "generate:orm": "prisma generate",
        "generate:template": "plop",
        "generate:types": "graphql-codegen",
        "lint": "yarn lint:cspell && yarn lint:prettier && yarn lint:eslint",
        "lint:cspell": "cspell --no-progress --no-summary '**'",
        "lint:eslint": "eslint './**/*.{js,ts,tsx}' --quiet --cache",
        "lint:prettier": "prettier --loglevel warn --check './**/*{yaml,yml,json,md,gql,graphql}'"
    },
    "dependencies": {
        "@apollo/server": "^4.4.0",
        "@paralleldrive/cuid2": "^2.1.0",
        "@prisma/client": "^4.10.1",
        "bcrypt": "^5.1.0",
        "dayjs": "^1.11.7",
        "dotenv": "^16.0.3",
        "envalid": "^7.3.1",
        "graphql": "^16.6.0",
        "pino": "^8.10.0",
        "zod": "^3.20.6"
    },
    "devDependencies": {
        "@graphql-codegen/cli": "^3.0.0",
        "@graphql-codegen/graphql-modules-preset": "^3.0.0",
        "@graphql-codegen/typescript-resolvers": "^3.0.0",
        "@graphql-tools/load-files": "^6.6.1",
        "@graphql-tools/merge": "^8.3.18",
        "@rimac-technology/style-guide": "^3.0.0",
        "@types/bcrypt": "^5.0.0",
        "@types/eslint": "^8.21.1",
        "@types/node": "^18.14.0",
        "@types/prettier": "^2.7.2",
        "cspell": "^6.26.3",
        "eslint": "^8.34.0",
        "nodemon": "^2.0.20",
        "pino-pretty": "^9.3.0",
        "plop": "^3.1.2",
        "prettier": "^2.8.4",
        "prisma": "^4.10.1",
        "ts-node": "^10.9.1",
        "typescript": "^4.9.5"
    },
    "packageManager": "yarn@3.4.1",
    "prisma": {
        "schema": "./src/database/schema.prisma",
        "seed": "ts-node ./src/database/seed/index.ts"
    }
}
